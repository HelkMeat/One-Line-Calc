using System.Threading; decimal A2; decimal B2; int A; int B; decimal C = 0; int userIn; Console.WriteLine("This program was written on 1/12/24"); Thread.Sleep(500); Console.WriteLine("Feel free to copy and edit as much as you want <3"); Thread.Sleep(1000); Console.Clear(); /* End of intro */ Console.WriteLine("What type of Math?");  Console.WriteLine("1 Add | 2 Subtract | 3 Multiply | 4 Divide."); userIn = Convert.ToInt32(Console.ReadLine()); Console.Clear();  Console.WriteLine("First number?"); A = Convert.ToInt32(Console.ReadLine()); Console.Clear(); Console.WriteLine("Second number?"); B = Convert.ToInt32(Console.ReadLine()); Console.Clear(); switch(userIn) { case 1: C = A + B; break; case 2: C = A - B; break; case 3: C = A * B; break; case 4: A2 = Convert.ToDecimal(A); B2 = Convert.ToDecimal(B); C = A2 / B2; break; } Console.WriteLine("Answer:" + C);
